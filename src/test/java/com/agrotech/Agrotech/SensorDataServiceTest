@SpringBootTest
class SensorDataServiceTest {

    @Autowired
    private SensorDataService service;

    @Test
    void guardarSensorData_funcionaCorrectamente() {
        SensorData data = SensorData.builder()
            .temperatura(24.0)
            .unidadTemperatura("Â°C")
            .humedad(55.0)
            .unidadHumedad("%")
            .nivelAgua(1300)
            .distanciaUltrasonica(10.5)
            .unidadDistancia("cm")
            .timestamp(LocalDateTime.now())
            .build();

        SensorData saved = service.save(data);

        assertNotNull(saved.getId());
    }
}